{% extends 'base.html.twig' %}

{% block title %}Connexion index{% endblock %}

{% block body %}
    <h1>Connexion index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>IdUser</th>
                <th>Passworduser</th>
                <th>role</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for connexion in connexions %}
            <tr>
                <td>{{ connexion.id }}</td>
                <td>{{ connexion.idUser }}</td>
                <td>{{ connexion.passworduser }}</td>
                <td>{{ connexion.role }}</td>
                <td>
                    <a href="{{ path('app_connexion_show', {'id': connexion.id}) }}">show</a>
                    <a href="{{ path('app_connexion_edit', {'id': connexion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_connexion_new') }}">Create new</a>
{% endblock %}
